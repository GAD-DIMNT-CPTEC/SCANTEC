#!/bin/sh
# this script expects the Lahey lf95 command (or a wrapper to lf95, e.g. mpif90)
# and returns the lf95 runtime object needed to link in when not using lf95 as
# linker frontend
$1 --verbose $ESMF_DIR/scripts/hello.f90 2>&1 | grep `which ld` | awk 'BEGIN { RS=" "}; /fj90rt0\.o/ ' | xargs
rm -f hello.o a.out
